{
  "compilerOptions": {
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noResolve": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES6",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/**/*"]
}
